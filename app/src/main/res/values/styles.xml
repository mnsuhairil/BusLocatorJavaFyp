<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- res/values/styles.xml -->
    <style name="CheckboxTheme" parent="Widget.AppCompat.CompoundButton.CheckBox" />
    <style name="TransparentDialog" parent="Theme.AppCompat.Dialog.MinWidth">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <!-- Add any other custom attributes you want to apply to the dialog here -->
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="TextLabel">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@color/your_color</item>
        <item name="hintTextColor">@color/your_color</item>
    </style>

    <style name="TextInputEditText" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="SpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@android:drawable/btn_dropdown</item>
        <!-- Add other desired attributes for the spinner style -->
    </style>


</resources>