<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextLabel">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@color/your_color</item>
        <item name="hintTextColor">@color/your_color</item>
    </style>

    <style name="TextInputEditText" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="SpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:background">@android:drawable/btn_dropdown</item>
        <!-- Add other desired attributes for the spinner style -->
    </style>

</resources>